<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/distancealert_textmessage_marginbottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/distancealert_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/distancealert_accessorylistframe_marginH"
            android:layout_marginVertical="@dimen/distancealert_buttonframe_margintop"
            app:layout_constraintBottom_toTopOf="@+id/distancealert_separatormedium_frame"
            app:layout_constraintTop_toBottomOf="@+id/distancealert_separatorfar_frame" />

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>