<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/aboutus_app_icon"
        android:layout_width="@dimen/aboutus_appicon_size"
        android:layout_height="@dimen/aboutus_appicon_size"
        android:layout_marginVertical="@dimen/aboutus_aboutlist_marginVertical"
        android:background="#000000"
        android:padding="1dp"
        android:src="@drawable/ic_app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutus_aboutlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/aboutus_aboutlist_marginHorizontal"
        android:layout_marginTop="@dimen/aboutus_logo_marginVertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutus_app_icon">

        <include
            android:id="@+id/aboutus_item_app"
            layout="@layout/aboutus_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/separator_aboutus_item_app"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutus_item_app" />

        <include
            android:id="@+id/aboutus_item_visitmk"
            layout="@layout/aboutus_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_aboutus_item_app" />

        <View
            android:id="@+id/separator_aboutus_item_visitmk"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutus_item_visitmk" />

        <include
            android:id="@+id/aboutus_item_visitnxptrimension"
            layout="@layout/aboutus_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_aboutus_item_visitmk" />

        <View
            android:id="@+id/separator_aboutus_item_visitnxptrimension"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutus_item_visitnxptrimension" />

        <include
            android:id="@+id/aboutus_item_contactmkemail"
            layout="@layout/aboutus_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_aboutus_item_visitnxptrimension" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/aboutus_logo_marginVertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutus_aboutlist">

        <ImageView
            android:id="@+id/aboutus_twitter_icon"
            android:layout_width="@dimen/aboutus_twitterlogo_size"
            android:layout_height="@dimen/aboutus_twitterlogo_size"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/twitter_logo" />

        <ImageView
            android:id="@+id/aboutus_linkedin_icon"
            android:layout_width="@dimen/aboutus_linkedinlogo_size"
            android:layout_height="@dimen/aboutus_linkedinlogo_size"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/linkedin_logo" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/aboutus_mklogo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aboutus_mklogo_height"
        android:layout_marginHorizontal="@dimen/aboutus_mklogo_marginHorizontal"
        android:layout_marginVertical="@dimen/aboutus_mklogo_marginVertical"
        android:adjustViewBounds="true"
        android:src="@drawable/mk_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/aboutus_firamemberlogo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/aboutus_firamemberlogo_height"
        android:layout_marginHorizontal="@dimen/aboutus_firamemberlogo_marginHorizontal"
        android:layout_marginVertical="@dimen/aboutus_firamemberlogo_marginVertical"
        android:adjustViewBounds="true"
        android:src="@drawable/firamember_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>